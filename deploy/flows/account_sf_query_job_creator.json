{
    "flow": {
        "name": "account_salesforce_query_job_create",
        "require_leader_election": "true",
        "tasks": [
            {
                "generate": {
                    "name": "account_run_sample_query",
                    "label": "account_run_sample_query",
                    "interval": 5,
                    "count": 5
                }
            },
            {
                "salesforce_bulkapi_job_creator": {
                    "name": "account_salesforce_query_job",
                    "label": "account_salesforce_query_job",
                    "credentials_path": "/etc/sfdc/credentials.json",
                    "operation": "query",
                    "query": "SELECT Id, Name, CreatedDate, LastModifiedDate FROM Account WHERE lastmodifieddate >= {{event.last_run_time}}",
                    "content_type": "CSV",
                    "column_delimiter": "COMMA",
                    "line_ending": "CRLF"
                }
            }
        ]
    }
}